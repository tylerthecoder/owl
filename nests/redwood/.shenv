#! /bin/sh

# This file contains environment variables that depend on the Operating System
# This includes things like the path, the editor, and the terminal emulator

# OWL
export OWL_PATH="/home/tyler/owl"
export OWL_CONFIG_PATH="/home/tyler/owl/nests/redwood/nest.json"

export TERM=xterm-256color

# XDG vars
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"

# Programs
export EDITOR="nvim"

# Secrets
[ -f "$HOME/.secrets" ] && source "$HOME/.secrets"