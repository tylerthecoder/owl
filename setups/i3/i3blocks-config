# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/home/tylord/owl/common/i3-status-scripts/$BLOCK_NAME
separator_block_width=15
markup=none

# Update time every 5 seconds
[time]
label=🕰️
command=date +"%a %b %d, %I:%M:%S %p"
interval=5

# Get the weather hourly
[weather]
command=~/.config/i3blocks/rofi-wttr/rofi-wttr
interval=3600
color=#A4C2F4

# Get the battery every minute
[battery]
command=~/.config/i3blocks/battery2/battery2
markup=pango
interval=60
color=#00FF00

# Query my default IP address only on startup
[network]
label=📶
interval=60
color=#00FFFF


[i3volume]
label=🔊
command=~/.config/i3blocks/i3-volume/volume output i3blocks
interval=once
signal=10
color=#b8bb26
separator_block_width=10
markup=pango


